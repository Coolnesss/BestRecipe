<%- model_class = User -%>
<div class="page-header">
  <h1><span class="glyphicon glyphicon-user" aria-hidden="true"><%= t '.title', :default => model_class.model_name.human.pluralize %></span></h1>
  <h6 class="text-center">Users in database: <span class="badge"><%= @users.count %></span></h6>
</div>
<div class="col-md-6 col-md-offset-3">

  <table class="table table-hover">
    <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th>Recipes</th>
      <% if not current_user.nil? %>
          <% if not current_user.admin.nil? %>
              <th><%= t '.actions', :default => t("helpers.actions") %></th>
          <% end %>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user) %></td>
          <td><span class="badge"><%= user.recipes.count %></span></td>
          <% if not current_user.nil? %>
              <% if not current_user.admin.nil? %>
                  <td>
                    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                                edit_user_path(user), :class => 'btn btn-primary btn-xs' %>
                    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                                user_path(user),
                                :method => :delete,
                                :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                                :class => 'btn btn-danger btn-xs' %>
                  </td>
              <% end %>
          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
