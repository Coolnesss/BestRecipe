<%- model_class = Recipe -%>
<div class="page-header">
  <h1 style="font-family:Ubuntu"><%= @recipe.name %></h1>
  <h6 class="text-center">By: <%= link_to @recipe.user.username, @recipe.user %></span></h6>
</div>


  <br>
  <div class="col-md-offset-1">
    <h2><strong>Instructions:</strong></h2>
    <h3 style="font-family:Ubuntu"><%= simple_format(@recipe.description, :class => "h3", :style => "font-family:Ubuntu") %></h3>
  </div>
  <br>
<div class="col-md-6 col-md-offset-3">
  <h2><strong> Ingredients: </strong></h2>

  <table class="table table-hover">
    <thead>
      <!--<tr>Name</tr>-->
    </thead>
    <tbody>
      <% @recipe.recipe_ingredients.each do |ri| %>
        <tr>
          <td> <%= ri.ingredient.name %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-6 col-md-offset-3">
  <div class="form-actions text-center">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                recipes_path, :class => 'btn' %>
    <% if not current_user.nil? %>
        <% if current_user.admin || current_user.id == @recipe.user.id %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_recipe_path(@recipe), :class => 'btn btn-primary' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                        recipe_path(@recipe),
                        :method => 'delete',
                        :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                        :class => 'btn btn-danger' %>
        <% end %>
    <% end %>
  </div>
</div>
