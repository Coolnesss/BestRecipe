<%- model_class = Recipe -%>
<div class="page-header">
  <h1><span class="glyphicon glyphicon-cutlery" aria-hidden="true"><%=t '.title', :default => model_class.model_name.human.pluralize %></span></h1>
  <h6 class="text-center">Recipes in database: <span class="badge"><%= @recipes.count %></span></h6>
</div>



<div class="container-fluid">
    <% @recipes.each do |recipe| %>

    <div class="col-sm-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to recipe.name, recipe %></h3>
        </div>
        <div class="panel-body">
          <%= recipe.description %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="col-md-6 col-md-offset-3">
<% if not current_user.nil? %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_recipe_path,
            :class => 'btn btn-primary' %>
<% end %>
</div>
