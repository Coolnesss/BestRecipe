<%- model_class = Ingredient -%>
<div class="page-header">
  <h1><span class="glyphicon glyphicon-apple" aria-hidden="true"><%=t '.title', :default => model_class.model_name.human.pluralize %></span></h1>
</div>
<div class="col-md-6 col-md-offset-3">
<h6>Ingredients in database: <span class="badge"><%= @ingredients.count %></span></h6>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.id, ingredient_path(ingredient) %></td>
        <td><%= ingredient.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ingredient_path(ingredient), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ingredient_path(ingredient),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-md-6 col-md-offset-3">

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ingredient_path,
            :class => 'btn btn-primary' %>
</div>
