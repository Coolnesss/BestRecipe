<h1>Sign in</h1>

<p id="notice"><%= notice %></p>

<div class="col-md-6 col-md-offset-3">
  <br>
  <%= form_tag session_path do %>


  <div class="form-group">
    username <%= text_field_tag :username, params[:username] %>
  </div>
  <div class="form-group">
    password <%= password_field_tag :password, params[:password] %>
  </div>
    <%= submit_tag "Log in", :class => "btn btn-primary" %>
  <% end %>
<br>

  <%= button_to "Sign in with Github", 'auth/github', :class => "btn btn-primary navbar-btn" %>
  <%= button_to "Sign in with Facebook", 'auth/facebook', id: "facebook_sign_in", :class => "btn btn-primary navbar-btn" %>

</div>
